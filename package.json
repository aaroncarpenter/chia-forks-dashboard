{
  "name": "forkboard",
  "productName": "ForkBoard",
  "description": "A small dashboard application to show balances of wallets from Chia and Forks.",
  "keywords": [],
  "main": "./src/main.js",
  "version": "0.6.0",
  "author": "Aaron Carpenter",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "dependencies": {
    "axios": "^0.24.0",
    "electron-context-menu": "^3.1.1",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^15.4.0",
    "electron-prompt": "^1.7.0",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0",
    "electron-log": "^4.4.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^15.3.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "forkboard",
        "name": "ForkBoard"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fork-board"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ],
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "icon": "../resources/icons/fork-board-gray",
        "appCopyright": "Copyright 2021(C) RedWolfTek LLC | Aaron Carpenter",
        "afterCopy": "./packaging/forge-hooks"
      }
    }
  }
}
