{
  "name": "forkboard",
  "productName": "ForkBoard",
  "description": "An ElecronJS Dashboard App to show wallets balances from Chia and Forks in one convenient location.",
  "keywords": [],
  "main": "./src/main.js",
  "version": "1.0.0",
  "author": "Aaron Carpenter",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "package-mac": "electron-packager . ForkBoard --overwrite --darwin --x64 --icon=assets/icons/mac/icon.icns --prune=true --out=/dist",
    "package-win": "electron-packager . ForkBoard --overwrite --asar --platform=win32 --arch=x64 --icon=assets/icons/win/icon.ico --prune=true --out=/dist",
    "package-linux": "electron-packager . ForkBoard --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=/dist",
    "installer-win": "electron-installer-windows --src ./out/ForkBoard-win32-x64 --dest ./dist/installers",
    "installer-mac": "electron-installer-dmg ./dist/fork-board-darwin-x64/fork-board.app ForkBoard"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "electron-installer-windows": "^3.0.0",
    "electron-log": "^4.4.1",
    "electron-packager": "^15.4.0",
    "electron-prompt": "^1.7.0",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^15.3.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "forkboard",
        "name": "ForkBoard"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "forkboard",
            "setupIcon": "assets/icons/win/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ],
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "icon": "assets/icons/win/icon.ico",
        "appCopyright": "Copyright 2021(C) RedWolfTek LLC | Aaron Carpenter"
      }
    }
  },
  "build": {
    "appId": "com.electron.forkboard",
    "productName": "ForkBoard",
  }
}
