{
  "name":  "forkboard",
  "productName": "ForkBoard",
  "description": "A small dashboard application to show balances of wallets from Chia and Forks.",
  "keywords": [],
  "main": "./src/main.js",
  "version": "0.5.0",
  "author": "Aaron Carpenter",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "dependencies": {
    "axios": "^0.21.4",
    "electron-context-menu": "^3.1.1",
    "electron-installer-windows": "^3.0.0",
    "electron-log": "^4.4.1",
    "electron-packager": "^15.4.0",
    "electron-prompt": "^1.7.0",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "13.1.7"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "ForkBoard",
        "name": "ForkBoard"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fork-board"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "icon": "src/img/app-icon.ico",
        "appCopyright": "RedWolfTek LLC",
        "ignore": [
          "/resources/config/wallets.json",
          "/resources/config/clientconfig.json",
          ".+.test.js",
          ".*.env",
          ".eslintrc",
          ".gitignore",
          "README.md",
          "yarn.lock",
          ".jshintrc",
          ".babelrc"
        ]
      }
    }
  }
}
